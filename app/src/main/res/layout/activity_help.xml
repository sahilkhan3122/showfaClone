<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
                <variable
                    name="viewModel"
                    type="com.example.showfadriverletest.ui.help.viewmodel.HelpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.help.HelpActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/header"
                layout="@layout/activity_header" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_100dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:background="@color/transparent"
                    android:paddingStart="@dimen/_20dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:hint="@string/subject"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingVertical="@dimen/_5dp"
                    android:singleLine="true"
                    android:textColor="@color/theme_color"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/_12dp"
                    tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/theme_color" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_20dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                tools:layout_editor_absoluteX="0dp">


                <EditText
                    android:id="@+id/etIssue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:hint="@string/describe_your_issue"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_20dp"
                    android:paddingVertical="@dimen/_5dp"
                    android:singleLine="true"
                    android:textColor="@color/theme_color"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/_12dp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintVertical_bias="0.122"
                    tools:ignore="TextSizeCheck,TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="-16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/theme_color"
                    app:layout_constraintTop_toBottomOf="@+id/etIssue"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="-16dp" />

            </LinearLayout>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_Save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_marginHorizontal="@dimen/_20dp"
                android:layout_marginVertical="@dimen/_30dp"
                android:background="@drawable/back_btn_round_black"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:padding="@dimen/_10dp"
                android:text="@string/lbl_save"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="TextSizeCheck"
                tools:layout_editor_absoluteX="20dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>